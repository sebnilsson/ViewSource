@{
    ViewBag.BodyClass = "home";
    ViewBag.Title = "View Source for URL";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginRouteForm("Result", FormMethod.Get))
{
    @Html.TextBox("url")
    <input type="submit" value="View Source"/>
}

<div class="source-code-link">
    <em>Source-code of View Source <a href="http://github.com/sebnilsson/ViewSource">available on GitHub</a>.</em>
</div>